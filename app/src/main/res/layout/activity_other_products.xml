<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherProductsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_height="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:onClick="otherProductsBack"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Products"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/input_register_bg"
                android:gravity="center"
                android:layout_gravity="center"
                />
            <ImageButton
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:src="@drawable/ic_shopping_cart_black_24dp"
                android:layout_gravity="center"/>

        </LinearLayout>


    </android.support.design.widget.AppBarLayout>



    <EditText
        android:layout_below="@id/appbar"
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded_edittext_states"
        android:hint="Search By Name"
        android:inputType="text"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login" />



    <RelativeLayout
        android:id="@+id/shop"
        android:layout_below="@id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/content_main_op" />

    </RelativeLayout>

</RelativeLayout>