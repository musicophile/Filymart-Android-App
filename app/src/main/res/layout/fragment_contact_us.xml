<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"

    tools:context=".fragment.ContactUsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/tendp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Address"
                android:textSize="20dp"
                android:textAppearance="?android:textAppearanceSmall"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filymart Company,"
                android:layout_marginTop="@dimen/tendp"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/pobox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P.O.Box 1539,"
                android:layout_marginTop="@dimen/tendp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/companyName"/>


            <TextView
                android:id="@+id/tvRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arusha, Tanzania"
                android:layout_marginTop="@dimen/tendp"
                app:layout_constraintTop_toBottomOf="@id/pobox"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/tvTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel.: +255 765438924"
                android:layout_marginTop="@dimen/tendp"
                app:layout_constraintTop_toBottomOf="@id/tvRegion"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvEmailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tendp"
                android:text="Email id: fily@filymart.com"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTel"/>

            <TextView
                android:id="@+id/tvEmailIdSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tendp"
                android:text="Email id: feusebius1710@gmail.com "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEmailId"/>

            <TextView
                android:id="@+id/tvFollowUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow Us"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAppearance="?android:textAppearanceSmall"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEmailIdSecond"
                android:layout_marginTop="20dp"/>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tendp"
                app:layout_constraintTop_toBottomOf="@id/tvFollowUs"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">


                <android.support.v7.widget.CardView
                    android:id="@+id/cardGoogle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <ImageButton
                        android:id="@+id/ImGoogle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:background="@color/colorWhite"
                        android:src="@drawable/icons8_google_plus_filled_50"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardFacebook"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/tendp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cardGoogle">

                    <ImageButton
                        android:id="@+id/ImFacebook"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:background="@color/colorWhite"
                        android:src="@drawable/icons8_facebook_52"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardInsta"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/tendp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cardFacebook">

                    <ImageButton
                        android:id="@+id/ImInsta"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:background="@color/colorWhite"
                        android:src="@drawable/icons8_instagram_filled_50"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardTwitter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/tendp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cardInsta">

                    <ImageButton
                        android:id="@+id/Imtwitter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:background="@color/colorWhite"
                        android:src="@drawable/icons8_twitter_52"
                        />

                </android.support.v7.widget.CardView>

            </android.support.constraint.ConstraintLayout>




            <TextView
                android:id="@+id/tvNameContactUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Message"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAppearance="?android:textAppearanceSmall"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/edName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Name"
                android:padding="@dimen/tendp"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:background="@drawable/rounded_edittext_states"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNameContactUs"
                android:layout_marginTop="@dimen/tendp"/>

            <EditText
                android:id="@+id/edEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="youremail@example.com"
                android:padding="@dimen/tendp"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:background="@drawable/rounded_edittext_states"
                app:layout_constraintTop_toBottomOf="@id/edName"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/tendp"/>

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="@dimen/tendp"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edEmail"
                android:textAppearance="?android:textAppearanceSmall"
                android:hint="Your Message Here"
                android:background="@drawable/rounded_edittext_states"
                android:layout_marginTop="@dimen/tendp"/>

            <Button
                android:id="@+id/contactUsMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEND MESSAGES"
                android:background="@drawable/button"
                android:padding="@dimen/tendp"
                android:textAppearance="?android:textAppearanceSmall"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editText"
                android:layout_marginTop="@dimen/tendp"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>