<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/tendp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/code_icon"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/slide_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center"
        android:textAppearance="?android:textAppearanceSmall"
        android:textSize="18dp"
        android:text="HEADING"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/slide_image"
        app:layout_constraintVertical_bias="0.355"
        tools:layout_editor_absoluteX="0dp"/>

    <TextView
        android:id="@+id/slide_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="Lorem ipsum lorem Ipsum Lorem IMpisum lorema ni ipsum so much so i hav eto fight
         untill the end the journey was never simple every has a story to be a warrior for"
        app:layout_constraintTop_toBottomOf="@id/slide_heading"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>